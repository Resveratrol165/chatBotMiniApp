  position: relative;
  width: 120rpx;
  height: 120rpx;
}
.add-bot-view .avatar-section .avatar-wrapper .avatar-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.3);
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  color: white;
  opacity: 0;
  transition: opacity 0.2s;
}
.add-bot-view .avatar-section .avatar-wrapper:active .avatar-overlay {
  opacity: 1;
