/* Material Design 3 Input Fields - Outlined Style */
.md3-field {
  position: relative;
  margin: 48rpx 0;
  border-radius: 8rpx;
  border: 2rpx solid var(--md-sys-color-outline-variant, #e0e0e0);
  background: var(--md-sys-color-surface, #ffffff);
  min-height: 112rpx;
}
.md3-field__input,
.md3-field__textarea {
  width: 100%;
  padding: 32rpx 32rpx 16rpx;
  font-size: 32rpx;
  line-height: 48rpx;
  border: none;
  background: transparent;
  color: var(--md-sys-color-on-surface, #1f1f1f);
  box-sizing: border-box;
}
.md3-field__input {
  height: 112rpx;
}
.md3-field__textarea {
  min-height: 200rpx;
  padding-top: 48rpx;
  line-height: 1.5;
  resize: none;
}
/* 大文本区域的特殊样式 */
.md3-field--multiline {
  min-height: 200rpx;
}
.md3-field--multiline .md3-field__textarea {
  min-height: 160rpx;
  padding: 48rpx 32rpx 32rpx;
}
.md3-field__label {
  position: absolute;
  left: 16rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 32rpx;
  color: var(--md-sys-color-on-surface-variant, #666666);
  transform-origin: left center;
  transition: all 0.15s cubic-bezier(0.4, 0, 0.2, 1);
  pointer-events: none;
  background: transparent;
  padding: 0 8rpx;
}
/* 标签浮动效果 */
.md3-field--focused .md3-field__label,
.md3-field--filled .md3-field__label {
  transform: translateY(-170%) scale(0.75);
  background: var(--md-sys-color-surface, #ffffff);
  color: var(--md-sys-color-primary, #1976d2);
}
/* 多行文本框的标签位置调整 */
.md3-field--multiline .md3-field__label {
  top: 32rpx;
  transform: translateY(-50%);
}
.md3-field--multiline.md3-field--focused .md3-field__label,
.md3-field--multiline.md3-field--filled .md3-field__label {
  transform: translateY(-170%) scale(0.75);
}
.md3-field--focused {
  border-color: var(--md-sys-color-primary, #1976d2);
  border-width: 4rpx;
}
.md3-field__counter {
  position: absolute;
  right: 32rpx;
  bottom: -40rpx;
  font-size: 24rpx;
  color: var(--md-sys-color-on-surface-variant, #666666);
}
.md3-field--disabled {
  background: var(--md-sys-color-surface-variant, #f5f5f5);
  border-color: var(--md-sys-color-outline-variant, #e0e0e0);
}
.md3-field--disabled .md3-field__input,
.md3-field--disabled .md3-field__textarea {
  color: var(--md-sys-color-on-surface, #1f1f1f);
  opacity: 0.38;
}
/* 错误状态 */
.md3-field--error {
  border-color: var(--md-sys-color-error, #b00020);
}
.md3-field--error .md3-field__label {
  color: var(--md-sys-color-error, #b00020);
}
/* 表单区域样式 */
.form-fields {
  padding: 48rpx 0;
}
