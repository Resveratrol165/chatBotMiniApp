
.contact-view.data-v-6ddd0609 {
  height: 100%;
  background-color: var(--md-sys-color-surface, #fff);
  display: flex;
  flex-direction: column;
}
.header.data-v-6ddd0609 {
  height: 64px;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 16px;
  background-color: var(--md-sys-color-surface-container, #f8f9fa);
  position: relative;
}
.header.data-v-6ddd0609::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 1px;
  background: var(--md-sys-color-outline-variant, rgba(0,0,0,0.08));
}
.title.data-v-6ddd0609 {
  font-size: 22px;
  font-weight: 500;
  color: var(--md-sys-color-on-surface, #1f1f1f);
  letter-spacing: 0.15px;
}
.add-btn.data-v-6ddd0609 {
  width: 40px;
  height: 40px;
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
  border-radius: 20px;
  transition: background-color 0.2s ease;
  color: var(--md-sys-color-on-surface-variant, #49454f);
}
.add-btn.data-v-6ddd0609:hover {
  background-color: var(--md-sys-color-surface-variant, rgba(0,0,0,0.08));
}
.add-btn.data-v-6ddd0609:active {
  background-color: var(--md-sys-color-surface-variant, rgba(0,0,0,0.12));
}
.add-icon.data-v-6ddd0609 {
  font-size: 28px;
  font-weight: 300;
  line-height: 28px;
}
.contact-list.data-v-6ddd0609 {
  flex: 1;
  overflow-y: auto;
  padding: 8px 0;
  background-color: var(--md-sys-color-surface, #fff);
}

/* 添加滚动条样式 */
.contact-list.data-v-6ddd0609::-webkit-scrollbar {
  width: 8px;
}
.contact-list.data-v-6ddd0609::-webkit-scrollbar-track {
  background: transparent;
}
.contact-list.data-v-6ddd0609::-webkit-scrollbar-thumb {
  background-color: var(--md-sys-color-surface-variant, rgba(0,0,0,0.2));
  border-radius: 4px;
}
.contact-list.data-v-6ddd0609::-webkit-scrollbar-thumb:hover {
  background-color: var(--md-sys-color-surface-variant, rgba(0,0,0,0.3));
}
